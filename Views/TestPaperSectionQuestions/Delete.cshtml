@model AssessmentMVC.Models.TestPaperSectionQuestion

@{
    ViewBag.Title = "Delete";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Remove Question</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">            
            <div class="form-group">
                <div class="col-sm-9">
                    <h4>
                        <span class="label label-info">
                            Are you sure you want to remove question code: @Model.QuestionMaster.QuestionCode from this test paper: @Model.TestPaper.TestPaperCode ?
                        </span>
                    </h4>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal">No</button>
        <input class="btn btn-danger" type="submit" value="Yes" />
    </div>
}

@model IEnumerable<AssessmentMVC.Models.QuestionTag>

@{
    Layout = null;
}

<h2>Tagging for Question Code: @ViewBag.QuestionCode</h2>

<p class="pull-right">
    @if (Model.Count() == 0)
    {
        @Html.ActionLink("Create Tagging", "Create", new { questionId = Request.QueryString["QuestionId"] })
    }    
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TopicID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LearningObjectiveID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LearningOutcomeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompetencyID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkillID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubskillID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LearningLevelID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DifficultyLevelID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LearningObjective.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LearningOutcome.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Competency.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skill.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubSkill.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LearningLevel.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DifficultyLevel.Description)
            </td>
            <td>
                @if (@Model.FirstOrDefault() == null || !@Model.FirstOrDefault().QuestionMaster.StatusID.Equals("A"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.QuestionTagID })  <b>|</b>
                }
                @Html.ActionLink("Details", "Details", new { id = item.QuestionTagID })
                @*@Html.ActionLink("Remo", "Delete", new { id = item.QuestionTagID })*@
            </td>
        </tr>
    }

</table>